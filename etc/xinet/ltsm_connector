service rfb
{
  port            = 5900
  disable         = no
  flags           = REUSE
  socket_type     = stream
  wait            = no
  user            = ltsm-xvfb
  groups          = yes
  server          = /usr/local/sbin/LTSM_connector
  server_args     = --type vnc
}

