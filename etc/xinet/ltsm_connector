service rfb
{
  port            = 5900
  disable         = no
  flags           = REUSE
  socket_type     = stream
  wait            = no
  user            = ltsm-xvfb
  groups          = yes
  server          = /usr/local/sbin/ltsm_connector
  server_args     = --type ltsm --config /etc/ltsm/ltsm_connector.json
}

service ms-wbt-server
{
  port            = 3389
  disable         = no
  flags           = REUSE
  socket_type     = stream
  wait            = no
  user            = ltsm-xvfb
  groups          = yes
  server          = /usr/local/sbin/ltsm_connector
  server_args     = --type rdp --config /etc/ltsm/ltsm_connector.json
}
